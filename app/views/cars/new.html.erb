<h3>Registro de um novo carro</h3>

<%= render  "shared/errors", obj: @car %>

<%= form_with(model: @car, local:true) do |f| %>
  <p><%= f.label :license_plate, "Placa" %></p>
  <p><%= f.text_field :license_plate %></p>
  <p><%= f.label :color, "Cor" %></p>
  <p><%= f.text_field :color %></p>
  <p><%= f.label :car_model_id, "Modelo do carro" %></p>
  <p><%= f.collection_select(:car_model_id, @car_models, :id, :name) %></p>
  <p><%= f.label :mileage, "Quilometragem" %></p>
  <p><%= f.text_field :mileage %></p>
  <p><%= f.label :subsidiary_id, "Filial" %></p>
  <p><%= f.collection_select(:subsidiary_id, @subsidiaries, :id, :name) %></p>
  <p><%= f.submit 'Enviar' %></p>
<% end %>