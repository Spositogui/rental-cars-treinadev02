<h3>Cadastro de um novo cliente</h3>

<%= render  "shared/errors", obj: @client %>

<%= form_with(model: @client, local: true) do |f| %>
  <p><%= f.label :name, "Nome" %></p>
  <p><%= f.text_field :name %></p>
  <p><%= f.label :document, "CPF" %></p>
  <p><%= f.text_field :document %></p>
  <p><%= f.label :email, "Email" %></p>
  <p><%= f.text_field :email %></p>
  <p><%= f.submit 'Enviar' %></p>
<% end %>